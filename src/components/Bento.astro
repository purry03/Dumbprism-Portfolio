---
import Container from '@/components/Container.astro'
import Link from '@/components/Link.astro'
import { buttonVariants } from '@/components/ui/button'
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from '@/components/ui/card'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getCollection } from 'astro:content'

const blog = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE)
---

<div class="grid grid-cols-1 grid-rows-4 md:grid-cols-3 md:grid-rows-6 gap-3 max-w-[130rem] mx-auto">
  <div class="col-span-full md:col-span-2 md:row-span-2 md:col-start-1 md:row-start-1 border-[#E49245]/20 border-2 rounded-lg relative overflow-hidden">
    <div class="absolute inset-0 bg-cover bg-center filter blur-xs opacity-20" style="background-image: url('/images/home/contour.avif');"></div>
    <div class="relative font-[jetbrains] text-white p-4 md:p-8 flex flex-col justify-around h-full">
      <h2 class="text-3xl font-bold mb-4 text-[#E49245]">Hello!</h2>
      <p class="text-sm opacity-75 mb-4 bg-[#1A1A1A] p-3 rounded-md border border-[#E49245]/10 shadow-md">
        I’m Rohan! I’m a computing enthusiast and simulation nerd with a focus on high-performance and quantum systems.
      </p>
      <p class="text-sm opacity-75 bg-[#1A1A1A] p-3 rounded-md border border-[#E49245]/10 shadow-md">
        Beyond my academic work, I spend time building game tools, designing experiments, and exploring the overlap between science fiction, storytelling, and real-world tech.
      </p>
    </div>
  </div>

  <div class="col-span-full md:col-span-1 md:row-span-6 md:col-start-3 md:row-start-1 bg-[#131313] border-[#E49245]/20 border-2 rounded-lg overflow-hidden relative group">
    <img src="/images/home/biome.jpg" alt="Japanese castle" class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-300 ease-in-out">
    <a href="/blog/cubiomesmpi-part1" class="absolute inset-0 flex items-end p-4 text-white bg-black bg-opacity-25 group-hover:bg-opacity-50 transition-colors duration-300 ease-in-out">
      <div>
        <p class="font-bold text-lg">Ultrafast Biome Generation</p>
        <p class="text-sm">Powered by MPI</p>
        <p class="text-xs opacity-40">a cubiomes port</p>
      </div>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6 ml-auto opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out">
        <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
      </svg>
    </a>
  </div>

  <div class="col-span-full md:col-span-2 md:row-span-2 md:col-start-1 md:row-start-3 bg-gradient-to-br from-[#18191A] to-[#232526] border-[#E49245]/20 border-2 rounded-xl overflow-hidden relative group shadow-lg flex items-center justify-center">
    <div class="absolute inset-0 bg-cover bg-center opacity-60 group-hover:scale-105 transition-transform duration-500 ease-in-out" style="background-image: url('/images/home/sakura.jpg');"></div>
    <div class="absolute inset-0 bg-black/60 group-hover:bg-black/70 transition-colors duration-300"></div>
    <a href="https://gitlab.com/sharmarohan" target="_blank" rel="noopener noreferrer" class="relative z-10 flex flex-col items-center justify-center p-10 text-white group">
      <div class="mb-4">
        <div class="w-20 h-20 rounded-full border-4 border-[#FC6D26] bg-white/10 flex items-center justify-center shadow-lg">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 36 36" fill="currentColor" class="w-12 h-12 text-[#FC6D26]">
            <path d="M35.49 21.43l-3.18-9.8a1.38 1.38 0 0 0-2.62-.06l-2.2 6.77H8.51l-2.2-6.77a1.38 1.38 0 0 0-2.62.06l-3.18 9.8a1.37 1.37 0 0 0 .5 1.54l16.18 11.8a1.37 1.37 0 0 0 1.62 0l16.18-11.8a1.37 1.37 0 0 0 .5-1.54z"/>
          </svg>
        </div>
